{
  "services": {
    "service-a": {
      "replcas": 3,
      "containers": [
        {
          "name": "api",
          "image": "kennethreitz/httpbin:latest",
          "resources": {
            "requests": {
              "cpu": "1024m",
              "memory": "2048Mi"
            },
            "limits": {
              "cpu": "2048m",
              "memory": "4Gi"
            }
          },
          "env": {
            "LOG_LEVEL": "DEBUG",
            "HTTP_PORT": "8080",
            "DB_NAME": "postgres",
            "DB_PORT": "5432",
            "DB_USERNAME": "postgres",
            "DB_PASSWORD": "abc123"
          },
          "extras": {
            "SLEEP": "1000",
            "freeformExtraConfig": "yes"
          }
        },
        {
          "name": "db",
          "image": "postgres:9.6.18",
          "resources": {
            "requests": {
              "cpu": "512m",
              "memory": "512Mi"
            },
            "limits": {
              "cpu": "512m",
              "memory": "2Gi"
            }
          }
        }
      ]
    },
    "service-b": {
      "replcas": 1,
      "containers": [
        {
          "name": "api",
          "image": "kennethreitz/httpbin:latest",
          "resources": {
            "requests": {
              "cpu": "256m",
              "memory": "512Mi"
            },
            "limits": {
              "cpu": "512m",
              "memory": "1Gi"
            }
          },
          "env": {
            "LOG_LEVEL": "DEBUG",
            "HTTP_PORT": "8080",
            "RABBITMQ_HOST": "xxx",
            "RABBITMQ_PORT": "yyy",
            "RABBITMQ_QUEUE_NAME": "www"
          }
        },
        {
          "name": "rabbitmq",
          "image": "rabbitmq:3.8.5",
          "resources": {
            "requests": {
              "cpu": "512m",
              "memory": "2048Mi"
            },
            "limits": {
              "cpu": "512m",
              "memory": "4Gi"
            }
          }
        }
      ]
    },
    "service-c": {
      "replcas": 1,
      "containers": [
        {
          "name": "api",
          "image": "kennethreitz/httpbin:latest",
          "resources": {
            "requests": {
              "cpu": "256m",
              "memory": "128Mi"
            },
            "limits": {
              "cpu": "512m",
              "memory": "512Mi"
            }
          }
        }
      ]
    }
  }
}
