{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "module": "CommonJs",
    "lib": ["ES2018"],
    "target": "ES2019",
    "typeRoots": ["./src/typed/vendor", "./node_modules/@types"]
  },
  "include": ["src", "__tests__", "scripts"]
}
